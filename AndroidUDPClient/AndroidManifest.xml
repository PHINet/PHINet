<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ndnhealthnet.androidudpclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ndn_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" android:enabled="true">
        <activity
            android:name="com.ndnhealthnet.androidudpclient.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.ndnhealthnet.androidudpclient.RecordHeartbeatActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.ndnhealthnet.androidudpclient.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anroidudpclient.MainActivity"/>
        </activity>
        <activity android:name="com.ndnhealthnet.androidudpclient.ConfigNetLinksActivity"
            android:screenOrientation="portrait"
			android:parentActivityName="com.ndnhealthnet.androidudpclient.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anroidudpclient.MainActivity"/>
        </activity>
        
        <activity android:name="com.ndnhealthnet.androidudpclient.ViewMyDataActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.ndnhealthnet.androidudpclient.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anroidudpclient.MainActivity"/>
        </activity>
        <activity android:name="com.ndnhealthnet.androidudpclient.UserCredentialActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.ndnhealthnet.androidudpclient.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anroidudpclient.MainActivity"/>
        </activity>
        <activity android:name="com.ndnhealthnet.androidudpclient.PatientDataActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.ndnhealthnet.androidudpclient.GetCliBeatActivity">
        </activity>
        <activity android:name="com.ndnhealthnet.androidudpclient.GetCliBeatActivity"
            android:screenOrientation="portrait"
            	android:parentActivityName="com.ndnhealthnet.androidudpclient.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.anroidudpclient.MainActivity"/>
		</activity>
    </application>

</manifest>
