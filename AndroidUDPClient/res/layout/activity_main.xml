<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleBar"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/welcomeText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_margin="25dp" />

    <Button
        android:id="@+id/netLinkBtn"
        android:layout_height="wrap_content"
        android:text="@string/netLinksText"
        android:onClick="configNetLinks"
        android:layout_width="180dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/selfBeatBtn"
        android:layout_height="wrap_content"
        android:text="@string/selfBeatText"
        android:onClick="getHeartBeatActivity"
        android:layout_width="180dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/getAvgBtn"
        android:layout_height="wrap_content"
        android:text="@string/avgBeatText"
        android:onClick="getAvgBeat"
        android:layout_width="180dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/cliBeatBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/cliBeatText"
        android:onClick="getCliBeat"
        android:layout_gravity="center" />

</LinearLayout>