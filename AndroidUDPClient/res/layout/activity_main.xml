<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#808080"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleBar"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/welcomeText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <Button
        android:id="@+id/netLinkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/netLinksBtn" 
        android:onClick="configNetLinks"/>

    <Button
        android:id="@+id/selfBeatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selfBeatBtn" 
        android:onClick="getHeartBeatActivity"/>

    <Button
        android:id="@+id/getAvgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/avgBeatBtn"
        android:onClick="getAvgBeat" />

    <Button
        android:id="@+id/cliBeatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cliBeatBtn"
        android:onClick="getCliBeat" />

</LinearLayout>