<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/titleBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:text="@string/cliBeatText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@android:id/list"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.93" />

    <Button
        android:id="@+id/addNewPatientBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/addNewPatientBtnText"
        android:background="@drawable/black_button"
        style="@style/button_text"
        android:layout_gravity="center|bottom"
        android:textSize="20sp" />

    <Button
        android:id="@+id/editPatientDataBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/editPatientDataBtnText"
        android:background="@drawable/black_button"
        style="@style/button_text"
        android:layout_gravity="center|bottom"
        android:textSize="20sp" />

    <Button
        android:id="@+id/getCliBeatBackBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/backBtnText"
        android:background="@drawable/black_button"
        style="@style/button_text"
        android:layout_gravity="center|bottom"
        android:textSize="25sp" />

</LinearLayout>